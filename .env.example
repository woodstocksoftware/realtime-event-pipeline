# Server
HOST=0.0.0.0
PORT=8001
DEBUG=false

# Database
DATABASE_PATH=data/events.db

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Authentication (set REQUIRE_AUTH=true to enforce API key on all endpoints)
REQUIRE_AUTH=false
API_KEY=your-secret-api-key-here

# Rate limiting
RATE_LIMIT_PUBLISH=200/minute
RATE_LIMIT_QUERY=600/minute
RATE_LIMIT_ADMIN=10/minute

# Router limits
MAX_QUEUE_SIZE=10000
MAX_SUBSCRIBERS=5000

# WebSocket limits
MAX_WS_MESSAGE_BYTES=1048576
MAX_WS_CONNECTIONS_PER_IP=20

# Payload limits
MAX_PAYLOAD_KEYS=50
MAX_PAYLOAD_BYTES=65536

# Logging
LOG_LEVEL=INFO
